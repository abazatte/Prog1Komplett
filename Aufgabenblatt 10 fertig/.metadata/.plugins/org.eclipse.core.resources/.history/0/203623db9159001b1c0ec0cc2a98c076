
public class World {

	final static boolean WHITE = true;
	final static boolean BLACK = false;
	static boolean[][] feld;
	static int size;
	Ant ant;
	
	public World(int s) {
		size = s;
		feld = new boolean[s][s];
		ant = new Ant(s / 2, s / 2);
		for (int i = 0; i < s; i++) {
			for (int j = 0; j < s; j++) {
				feld[i][j] = WHITE;
			}
		}
	}

	public Ant getAnt() {
		return this.ant;
	}

	public int getSize() {
		return size;
	}
	

	
	public static void changeColor(int x, int column) {
		if(feld[x][column] == WHITE) {
			feld[x][column] = BLACK;
		}
		else {
			feld[x][column] = WHITE;
		}
	}
	public boolean isCellBlack(int row, int column) {
		if (feld[row][column] == BLACK) {
			return true;
		} else {
			return false;
		}
	}

}
