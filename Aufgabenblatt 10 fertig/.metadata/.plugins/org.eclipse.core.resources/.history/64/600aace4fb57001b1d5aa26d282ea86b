
public class World {

	final static boolean WHITE = true;
	final static boolean BLACK = false;

	Ant ant;
	static boolean[][] feld;
	static int size;

	public World(int s) {
		size = s;
		feld = new boolean[s][s];
		ant = new Ant(s / 2, s / 2);
		for (int i = 0; i < s; i++) {
			for (int j = 0; j < s; j++) {
				feld[i][j] = WHITE;
			}
		}
	}

	public Ant getAnt() {
		return this.ant;
	}

	public int getSize() {
		return size;
	}
	

	
	public static void changeColor(int row, int column) {
		if(feld[row][column] == WEISS) {
			feld[row][column] = SCHWARZ;
		}
		else {
			feld[row][column] = WEISS;
		}
	}
	public boolean isCellBlack(int row, int column) {
		if (feld[row][column] == SCHWARZ) {
			return true;
		} else {
			return false;
		}
	}

}
