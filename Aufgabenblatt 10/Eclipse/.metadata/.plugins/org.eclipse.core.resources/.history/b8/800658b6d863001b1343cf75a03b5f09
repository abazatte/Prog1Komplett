
public class Aufgabe_Probe {

	public static void main(String[] args) {
		char[] klartext = new char[9];
		klartext[0] = 'G';
		klartext[1] = 'a';
		klartext[2] = 'r';
		klartext[3] = 't';
		klartext[4] = 'e';
		klartext[5] = 'n';
		klartext[6] = 'z';
		klartext[7] = 'a';
		klartext[8] = 'u';
		klartext[9] = 'n';

		System.out.println(verschluesseln(klartext));
	}

	static char[][] verschluesseln(char[] klar) {
		char[][] verschl = new char[2][klar.length / 2];
		for (int i = 0; i <= klar.length; i++) {
			for (int j = 0; j < 2; j++) {
				verschl[j][i/2] = klar[i];
			}
		}
		return verschl;
	}
}
